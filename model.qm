      <entry>// Show the current vend selection
bsp_DisplaySelection(m_vendSelection);

// arm inactivity timeout - one-shot, not repeating
m_timeoutEvt-&gt;armX(SELECTION_TIMEOUT_PERIOD);</entry>
      <exit>// disarm timer
m_timeoutEvt-&gt;disarm();</exit>
      <tran trig="TIMEOUT">
       <choice target="../../../7">
